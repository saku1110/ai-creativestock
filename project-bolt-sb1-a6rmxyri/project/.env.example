VITE_APP_ENV=development
VITE_USE_SAMPLE_DATA=false
VITE_ENABLE_LOCAL_DASHBOARD=true

# Supabase project config
VITE_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR-ANON-KEY

# Optional: proxy local /api calls to a different origin (e.g., production)
VITE_API_PROXY_TARGET=
# Set to true/false to control TLS verification when proxying (defaults based on scheme)
VITE_API_PROXY_SECURE=

# Public site URL (used for redirects)
VITE_PUBLIC_SITE_URL=https://ai-creative-stock.com

# Optional: enable verbose logs during local dev
VITE_DEBUG=true

# Stripe (Frontend) â€” use TEST keys in dev
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_XXXXXXXXXXXXXXXXXXXXXXXX
VITE_PRICE_STANDARD_MONTHLY=
VITE_PRICE_STANDARD_YEARLY=
VITE_PRICE_PRO_MONTHLY=
VITE_PRICE_PRO_YEARLY=
VITE_PRICE_ENTERPRISE_MONTHLY=
VITE_PRICE_ENTERPRISE_YEARLY=

# Stripe (Backend API routes)
# Use TEST secret + webhook secret. Prefer setting in hosting env (e.g., Vercel),
# but for local development you can also set these in a non-committed .env.local:
# STRIPE_SECRET_KEY=sk_test_XXXXXXXXXXXXXXXXXXXXXXXX
# STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXXXXXXXXXXXXXXXX

# Security allowlists (optional)
# Comma-separated IPv4s for admin upload API on Vercel functions
UPLOAD_IP_ALLOWLIST=

# Client-side admin UI allowlist (checked before rendering admin pages)
VITE_ADMIN_IP_ALLOWLIST=
