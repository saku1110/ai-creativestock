{
  "buildCommand": "ROLLUP_DISABLE_NATIVE=1 npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "ignoreCommand": "exit 1",
  
  "routes": [
    {
      "src": "/contact",
      "dest": "/index.html"
    },
    {
      "src": "/terms",
      "dest": "/index.html"
    },
    {
      "src": "/privacy",
      "dest": "/index.html"
    },
    {
      "src": "/refund",
      "dest": "/index.html"
    },
    {
      "src": "/commercial",
      "dest": "/index.html"
    },
    {
      "src": "/pricing",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
 
  "functions": {
    "api/stripe-webhook.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 10
    },
    "api/contact.ts": {
      "runtime": "nodejs20.x",
      "regions": ["hnd1"],
      "maxDuration": 10
    }
  }
}
