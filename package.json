{
  "name": "workspace",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"src/**/*.{ts,tsx}\" \"*.{js,ts,json,cjs,mjs,md}\" \"{eslint,vitest}.config.{js,ts}\" --check",
    "format:write": "prettier \"src/**/*.{ts,tsx}\" \"*.{js,ts,json,cjs,mjs,md}\" \"{eslint,vitest}.config.{js,ts}\" --write",
    "audit": "npm audit --audit-level=high",
    "upload:supabase": "tsx src/tools/supa-upload.ts",
    "watch:supabase": "tsx src/tools/supa-watch.ts --dir ./assets/videos --bucket videos --scheme dir",
    "watch:supabase:local-content": "tsx src/tools/supa-watch.ts --dir ./project-bolt-sb1-a6rmxyri/project/src/local-content --bucket videos --scheme dir"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.98",
    "@supabase/supabase-js": "^2.56.1",
    "nodemailer": "^6.9.14",
    "resend": "^4.0.0",
    "p-limit": "^7.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
